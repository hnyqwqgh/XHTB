      ffmpegCmd = 'ffmpeg -y -i ' + srcFilePath + ' -c:v mpeg4 -c:a aac -ss ' + sTime + ' -to ' + eTime +
        ' ' + outFilePath;
    }
    logger.info(TAG, 'videoClip cmd: ' + ffmpegCmd);
    MP4Parser.ffmpegCmd(ffmpegCmd, callback);
  }
